<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <link rel="icon" type="image/x-icon" href="/images/logo.png" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>

  <body>
    <!-- Horizontal navigation bar -->
    <header id="nav-bar-header">

      <div class="header-content">

        <!-- logo -->
        <div class="logo">
          {{! https://drive.google.com/uc?export=view&id=1YvP6uMZuw7LSANxNQhZFlRzQ39eDk8AB }}
          <a href="/">
            <img
              src="/images/logo.png"
              alt="logo"
              style="width: 60px; height: 65px"
            />
          </a>
          <p id="logo-Name">SmartWallet</p>

        </div>

        <div class="container hamburger" onclick="SideNavControl(this);">
          <div class="bar1"></div>
          <div class="bar2"></div>
          <div class="bar3"></div>
        </div>

        <nav class="nav-bar">

          <!-- header profile -->
          <div class="header-profile">
            <div class="notification-icon">
              {{! <i class="bi bi-bell"><sup class="count-amount">0</sup></i> }}
              <div class="bell-hover">
                <div class="bell-wrap" onclick="showNotification();"></div>
                <img src="/images/bell.png" alt="" srcset="" />
                <span class="notification-counter">5</span>
              </div>

            </div>

            <!-- notification dropdown menu -->
            <div class="notification-dropdown dropdown-menu">
              <div class="notification-box">
                <ul class="notification-list">
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A transfer you 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A transfer you 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A transfer you 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A transfer you 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                  <li>
                    <div class="notification-item">
                      <img src="/images/user.png" alt="" width="50px" />
                      <div class="item-body">
                        <h6>Nguyen Van A transfer you 50.000 VND</h6>
                        <span>29 July 2020 - 02:26 PM</span>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
              <a href="javascript:void(0)" class="view-all-notification">

                See all notification &nbsp;<i class="bi bi-arrow-right"></i>
              </a>
            </div>

            <!-- profile content -->
            <div class="click-profile">
              <div class="profile-wrap" onclick="showUserOption();"></div>
              <div class="profile-info">
                <p class="header-profile-fs-1">Xin chào,
                  <span id="header-profile-username">
                    {{user.fullName}}
                  </span>
                </p>
                <span id="role" class="header-profile-fs-2">
                  Activated user</span>
              </div>
              <img src="/images/user.png" alt="" width="50px" />
            </div>

            <div class="userOption dropdown-menu">
              <a href="/profile"><img
                  src="/images/user_profile.png"
                  width="30px"
                /><span>Profile</span></a>
              <a href="/login"><img
                  src="/images/log-out.png"
                  width="30px"
                /><span>Log out</span></a>
            </div>

          </div>
        </nav>
      </div>
    </header>

    <!-- Side navigation bar -->
    <div class="side-nav-bar">

      <div class="admin-menu">

        <!-- deposit -->
        <a href="/admin/products" class="menu-item">
          <img src="/images/pending.png" alt="pending" />
          <p class="side-nav-text side-nav-menu-text">Sản phẩm</p>
        </a>

        <!-- withdraw -->
        <a href="/admin/activated" class="menu-item">
          <img src="/images/activated.png" alt="activated" />
          <p class="side-nav-text side-nav-menu-text">Activated Accounts</p>
        </a>

        <!-- transfer -->
        <a href="/admin/disabled" class="menu-item">
          <img src="/images/disabled.png" alt="disabled" />
          <p class="side-nav-text side-nav-menu-text">Disabled Accounts</p>
        </a>

        <!-- buy phone card -->
        <a href="/admin/locked" class="menu-item">
          <img src="/images/locked.png" alt="locked" />
          <p class="side-nav-text side-nav-menu-text">Locked Accounts</p>
        </a>

        <!-- transaction -->
        <a href="/admin/transactionApproval" class="menu-item">
          <img src="/images/transaction.png" alt="transaction" />
          <p class="side-nav-text side-nav-menu-text">Transactions Pending
            Approval</p>
        </a>
      </div>
    </div>
    <div class="wrapper" id="window-wrapper"></div>
    <!-- Main content -->
    <div class="main">
      <!-- Website body -->
      <div class="content-holder" id="admin">
        {{{body}}}
      </div>

    </div>
    <footer>

    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"
    ></script>
